{
  "expo": {
    "name": "WordPress Blog",
    "slug": "wordpress-blog-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.wordpress.blogmobile",
      "infoPlist": {
        "NSHealthShareUsageDescription": "Az alkalmazás hozzáfér az egészségügyi adataidhoz (lépések, súly, vízbevitel, alvás) a követéshez és megjelenítéshez.",
        "NSHealthUpdateUsageDescription": "Az alkalmazás rögzíti az egészségügyi adataidat (súly, vízbevitel) a HealthKit-be."
      },
      "entitlements": {
        "com.apple.developer.healthkit": true,
        "com.apple.developer.healthkit.background-delivery": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.wordpress.blogmobile"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "a1b2c3d4-e5f6-7890-abcd-ef1234567890"
      }
    }
  }
}
